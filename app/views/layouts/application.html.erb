<!DOCTYPE html>
<html>
  <head>
    <title>ComicSchedule</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'title_logo', media: 'all'%>
  </head>

  <body>
    <div class="app-title navbar navbar-expand-md navbar-light bg-light">
      <div class="navbar-brand">ComicSchedule</div>

      <ul class="navbar-nav ml-auto">
        <% if current_user %>
          <li class="nav-item"><%= link_to 'トップ', books_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'プロフィール', user_path(current_user.id), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '通知一覧',  bookmarks_index_books_path(current_user.id), class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'サインイン', new_user_registration_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
    <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name %>">
          <%= msg %>
        </div>
      <% end %>

      <%= yield %>

    </div>
  </body>
</html>
