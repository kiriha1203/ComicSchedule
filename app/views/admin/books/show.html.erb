<h2>本詳細</h2>

<table class="table table-hover">
  <tbody>
  <tr>
    <th>タイトル</th>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <th>タイトル（平仮名）</th>
    <td><%= @book.title_kana %></td>
  </tr>
  <tr>
    <th>著者</th>
    <td><%= @book.author%></td>
  </tr>
  <tr>
    <th>レーベル</th>
    <td><%= @book.label %></td>
  </tr>
  <tr>
    <th>発行形態</th>
    <td><%= @book.issue_from %></td>
  </tr>
  </tbody>
</table>

<%= link_to '編集',  edit_admin_book_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', [:admin, @book], method: :delete,
            data: { confirm: "「#{@book.title}」を削除します。よろしいですか？"},
            class: 'btn btn-danger' %>

<h2> 巻数情報</h2>
<table>
  <tbody>
  <% @book_details.each do |detail| %>
    <tr>
      <th>タイトル</th>
      <td><%= detail.title %></td>
    </tr>
    <tr>
      <th>巻数</th>
      <td><%= detail.volume %></td>
    </tr>
    <tr>
      <th>発売日</th>
      <td><%= detail.release %></td>
    </tr>
    <%= link_to '編集',  edit_admin_book_detail_path, class: 'btn btn-primary mr-3' %>
    <%= link_to '削除', [:admin, detail], method: :delete,
                data: { confirm: "「#{detail.title}」を削除します。よろしいですか？"},
                class: 'btn btn-danger' %>
  <% end %>
  </tbody>
</table>
