<h2>本詳細</h2>

<table class="table table-hover">
  <tbody>
  <tr>
    <th>タイトル</th>
    <td><%= @book.title %></td>
  </tr>
  <tr>
    <th>タイトル（平仮名）</th>
    <td><%= @book.title_kana %></td>
  </tr>
  <tr>
    <th>著者</th>
    <td><%= @book.author%></td>
  </tr>
  <tr>
    <th>レーベル</th>
    <td><%= @book.label %></td>
  </tr>
  <tr>
    <th>発行形態</th>
    <td><%= @book.issue_from %></td>
  </tr>
  </tbody>
</table>

<%= link_to '編集',  edit_admin_book_path, class: 'btn btn-primary mr-3' %>
<%= link_to '削除', [:admin, @book], method: :delete,
            data: { confirm: "「#{@book.title}」を削除します。よろしいですか？"},
            class: 'btn btn-danger' %>

<h2> 巻数情報</h2>
<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
    <tr>
      <th>タイトル</th>
      <th>巻数</th>
      <th>発売日</th>
    </tr>
    </thead>
    <tbody>
    <% @book_details.each do |detail| %>
      <tr>
        <td><%= detail.title %></td>
        <td><%= detail.volume %></td>
        <td><%= detail.release %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
