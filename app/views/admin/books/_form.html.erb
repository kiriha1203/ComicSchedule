<% if book.errors.present? %>
  <ul id="error_explanation">
    <% book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: [:admin, book], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: 'form-control', id: 'book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :title_kana %>
    <%= f.text_field :title_kana, class: 'form-control', id: 'book_title_kana' %>
  </div>
  <div class="form-group">
    <%= f.label :author %>
    <%= f.text_field :author, class: 'form-control', id: 'book_author' %>
  </div>
  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, class: 'form-control', id: 'book_label' %>
  </div>
  <div class="form-group">
    <%= f.label :issue_from %>
    <%= f.text_field :issue_from, class: 'form-control', id: 'book_issue_from' %>
  </div>
  <%= f.submit '登録する', class: 'btn btn-primary' %>
<% end %>