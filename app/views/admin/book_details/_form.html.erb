<% if book_detail.errors.present? %>
  <ul id="error_explanation">
    <% book_detal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: [:admin, book_detail], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: 'form-control', id: 'book_detail_title' %>
  </div>
  <div class="form-group">
    <%= f.label :title_kana %>
    <%= f.text_field :title_kana, class: 'form-control', id: 'book_detail_title_kana' %>
  </div>
  <div class="form-group">
    <%= f.label :volume %>
    <%= f.text_field :volume, class: 'form-control', id: 'book_detail_volume' %>
  </div>
  <div class="form-group">
    <%= f.label :page %>
    <%= f.text_field :page, class: 'form-control', id: 'book_detail_page' %>
  </div>
  <div class="form-group">
    <%= f.label :release %>
    <%= f.date_field :release, class: 'form-control', id: 'book_detail_release' %>
  </div>
  <%= f.submit '登録する', class: 'btn btn-primary' %>
<% end %>